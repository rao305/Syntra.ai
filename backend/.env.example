# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dac
# For Neon: postgresql+asyncpg://user:password@ep-xxx.us-east-2.aws.neon.tech/dac?sslmode=require

# Qdrant Vector DB
QDRANT_URL=https://xxx.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key

# Upstash Redis (for rate limiting)
UPSTASH_REDIS_URL=https://xxx.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_token

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption for provider keys (use Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# Email (for magic links - using SMTP or service like Resend)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=re_xxxxx

# Or use Resend API
RESEND_API_KEY=re_xxxxx

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRICE_ID=price_xxxxx  # Per-seat price ID

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development  # development, staging, production

# LLM Provider API Keys (stored encrypted per-org in DB, these are fallback/test keys)
# Users bring their own keys per org
PERPLEXITY_API_KEY=pplx-xxxxx
OPENAI_API_KEY=sk-xxxxx
GOOGLE_API_KEY=AIzaSyxxxxx
OPENROUTER_API_KEY=sk-or-xxxxx

# Rate Limits (defaults)
DEFAULT_REQUESTS_PER_DAY=1000
DEFAULT_TOKENS_PER_DAY=100000
