# Syntra Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/syntra

# ============================================
# QDRANT (Vector Database)
# ============================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ============================================
# UPSTASH REDIS
# ============================================
UPSTASH_REDIS_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_TOKEN=your-redis-token

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# ============================================
# STRIPE (Billing)
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# ============================================
# EMAIL
# ============================================
EMAIL_FROM=noreply@syntra.ai
# Option 1: Use Resend
RESEND_API_KEY=re_...
# Option 2: Use SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development

# ============================================
# RATE LIMITS
# ============================================
DEFAULT_REQUESTS_PER_DAY=100
DEFAULT_TOKENS_PER_DAY=5000000

# ============================================
# LLM PROVIDER API KEYS (Optional - Fallback)
# These can also be set per-organization via API
# ============================================
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...
PERPLEXITY_API_KEY=pplx-...
OPENROUTER_API_KEY=sk-or-...
KIMI_API_KEY=sk-...

# ============================================
# SUPERMEMORY (Long-term Episodic Memory)
# ============================================
SUPERMEMORY_API_KEY=...
SUPERMEMORY_API_BASE_URL=https://api.supermemory.ai

# ============================================
# FIREBASE AUTH
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_FILE=/absolute/path/to/serviceAccountKey.json
# OR use JSON string directly:
# FIREBASE_CREDENTIALS_JSON={"type":"service_account",...}
DEFAULT_ORG_ID=org_demo

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_COREWRITE=false

